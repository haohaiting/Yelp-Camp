<div class="ui container">
    <h1 class="ui huge header">New Campground</h1>
    <form class="ui form" action="/campgrounds" method="POST">
        <div class="field">
            <label>Camp Name</label>
            <input type="text" name="camp[name]" placeholder="Camp Name">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="camp[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="camp[description]"></textarea>
        </div>
        <button class="ui violet button" type="submit">Submit</button>
        <a class="ui violet inverted button" href="/campgrounds">Back</a>
    </form>
    
</div>


