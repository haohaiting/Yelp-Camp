<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<div class="ui container" id="form">
    <h1 class="ui huge header">New Campground</h1>
    <form class="ui form" action="/campgrounds" method="POST">
        <div class="field">
            <label>Camp Name</label>
            <input type="text" name="name" placeholder="Camp Name">
        </div>
        <div class="field">
            <label>Price ($/night)</label>
            <input type="number" name="price" placeholder="price", min="0.01", step="0.01">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="image" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="description"></textarea>
        </div>
        <button class="ui violet button" type="submit">Submit</button>
        <a class="ui violet basic button" href="/campgrounds">Back</a>
    </form>
</div>

<%- include("../partials/footer") %>
