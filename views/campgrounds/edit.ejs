<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<div class="ui container" id="form">
    <h1 class="ui huge header">Edit <%= campground.name %></h1>
    <form class="ui form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Camp Name</label>
            <input type="text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="campground[description]"><%= campground.description %></textarea>
        </div>
        <button class="ui violet button" type="submit">Submit</button>
        <a class="ui violet basic button" href="/campgrounds">Back</a>
    </form>
</div>

<%- include("../partials/footer") %>